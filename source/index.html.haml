!!!
%html

  %head
    %title Racetrack
    = stylesheet_link_tag('all')
    = javascript_include_tag('//code.highcharts.com/adapters/standalone-framework.js')
    = javascript_include_tag('//code.highcharts.com/highcharts.js')
    = javascript_include_tag('all')

  %body
    %main
      %header
        %h1 Racetrack

      #content
        %nav
          %h3 Saved Benchmarks
          .saved-benchmarks

        %section#stage
          #progress

          #chart

          %table#results
            %thead
              %tr
                %th Implementation
                %th Ops/second

            %tbody

          .editors
            %fieldset
              %input(type="text" name="title" placeholder="Enter a title")

            #setup
              %textarea
                :preserve
                  // Setup code
                  var array = _.range(100);

                  function increment(x) { return x + 1; }
                  function isEven(x) { return x % 2 === 0; }
                  function noop(e) {}

            #lazy
              %textarea
                :preserve
                  // Lazy code

            #underscore
              %textarea
                :preserve
                  // Underscore/Lo-Dash code

          .actions
            %button#new-benchmark New
            %button#run-benchmarks Run
            %button#save-benchmarks Save
